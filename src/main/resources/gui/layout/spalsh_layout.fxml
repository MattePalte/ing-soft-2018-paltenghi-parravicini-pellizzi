<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="422.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="project.ing.soft.gui.SplashController">
    <StackPane fx:id="stackBox" alignment="CENTER">
        <ImageView fx:id="ivSplash">
            <image>
                <Image url="@../sagrada_small_splash.png" />
            </image>
        </ImageView>
        <VBox alignment="BOTTOM_CENTER" spacing="10">
            <padding><Insets bottom="75" left="100" right="100" top="25" /></padding>
            <Text fill="WHITE" stroke="BLACK" strokeLineCap="ROUND" strokeType="OUTSIDE" styleClass="big_title" text="Welcome" />
            <Text text="Insert your NickName" />
            <TextField fx:id="txtName" promptText="Insert your name here"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnConnectRMI" onAction="#connectRMI" text="Login with RMI" />
                <Button fx:id="btnConnectSocket" onAction="#connectSocket" text="Login with Socket" />
            </HBox>
        </VBox>
    </StackPane>
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
</VBox>
